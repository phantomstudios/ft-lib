{
  "compilerOptions": {
    "target": "es5",
    "module": "node16",
    "moduleResolution": "node16",
    "isolatedModules": true,
    "types": ["youtube", "jest"],
    "lib": ["dom", "es2020"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["test/**/*"]
}
